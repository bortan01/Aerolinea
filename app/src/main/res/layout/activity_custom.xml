<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomActivity">

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fecha_vuelo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="12dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />
    <ImageButton
        android:id="@+id/btnEditar"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_plain"
        android:onClick="onEditar"
        android:layout_toEndOf="@id/fecha"
        />
    <TextView
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/nombre"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:text="@string/hora_vuelo"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        />
    <TextView
        android:id="@+id/genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/apellido"
        android:text="Modelo Avion"
        android:layout_marginLeft="12sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nombre"
        android:text="2009-01-01"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="12dp"

        />
    <TextView
        android:id="@+id/hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@id/fecha"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:text="15:30:00"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_toEndOf="@id/nombre"
        android:textColor="@android:color/holo_orange_dark"
        />

    <TextView
        android:id="@+id/avion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/apellido"
        android:text="MR-1222"
        android:layout_marginLeft="12sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_toEndOf="@id/nombre"
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>
